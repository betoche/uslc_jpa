public class UslcJpaManager {
	public List<PurchaseOrder> poList = null;
	public List<Color> colorList = null;
	public List<Upc> upcList = null;
	public List<Item> itemList = null;
	public List<User> userList = null;
	
	public List<PurchaseOrder> getPurchaseOrderList() {
		if( poList == null ) {
			poList = PurchaseOrderRepo.findAll();
		}
		return poList;
	}
	
	public List<Color> getColors(){
		if( colorList == null ) {
			colorList = ColorRepo.findAll();
		}
		return colorList;
	}
	public List<Upc> getUpcs(){
		if( upcList == null ) {
			upcList = UpcRepo.findAll();
		}
		return upcList;
	}
	public List<Item> getItems() {
		if( itemList == null ) {
			itemList = ItemRepo.findAll();
		}
		return itemList;
	}
	public List<User> getUsers() {
		if( userList == null ) {
			userList = UserRepo.findAll();
		}
		return userList;
	}
	
